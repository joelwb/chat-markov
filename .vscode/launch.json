    "version": "0.2.0",
    "configurations": [
        {
            "name": "ng serve",
            "type": "pwa-msedge",
            "request": "launch",
            "preLaunchTask": "npm: start",
            "url": "http://localhost:4200/"
        },
        {
            "request": "launch",
            "name": "Launch Program",
            "type": "node",
            "program": "${workspaceFolder}/src/backend/src/main.ts",
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "runtimeExecutable": "C:\\Users\\AEVO\\.deno\\bin\\deno.EXE",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "--allow-read",
                "--allow-write",
                "--allow-net",
                "--allow-env",
                "--unstable-kv",
                "--env-file=${workspaceFolder}/src/backend/.env"
            ],
            "attachSimplePort": 9229
        }
    ]
}